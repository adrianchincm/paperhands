<%= javascript_pack_tag 'coin' %>

<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
    <div class="flex">
  <div class="max-w-xl mb-10 sm:text-center lg:max-w-2xl md:mb-12">
    <div>
      <p class="inline-block px-3 py-px mb-4 text-xs font-semibold tracking-wider text-teal-900 uppercase rounded-full bg-teal-accent-400">
        <span class="text-lg"><%= @coin["name"] %></span>
        <span class="text-lg text-gray-500"><%= @coin["symbol"] %></span>
      </p>
    </div>
    <img class="mx-auto h-24 w-24 rounded-full" src=<%= @coin["image"]["large"] %> alt="">
    <p class="mt-4 text-base text-gray-700 md:text-lg">
      <%= raw @coin["description"]["en"].truncate_words(300) %>
    </p>
  </div>

  <div class="ml-8 mt-12">
    
    <div class="mx-auto text-center">
      <div class="max-w-lg mb-4 font-sans text-3xl font-bold leading-none tracking-tight text-gray-900 sm:text-4xl ">Current position</div>
      <div class="text-base text-blue-700 md:text-lg">$61,500.92</div>
      <div class="text-base text-gray-700 md:text-lg">1.0014324 BTC</div>
    </div>
    
    <div class="flex w-full flex-wrap items-stretch mb-3" x-data="{ input: '',
                                                                              coinValue: '',
                                                                              setInput(event) {
                                                                                this.coinValue = (event.target.value / <%= j @coin["market_data"]["current_price"]["usd"] %>).toFixed(8);
                                                                            }, }">
              
        <div class="mt-12 mx-auto">

        <div>          
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">
                $
              </span>
            </div>
            <input id="usdInput" x-on:input="setInput($event)" type="text" name="price" id="price" class="focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00">
            <div class="absolute inset-y-0 right-0 flex items-center">
              <div class="mr-4 text-gray-500">USD</div>
            </div>
          </div>
        </div>

        <div class="mt-4">          
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">                
            </div>
            <input id="coinInput" x-model="coinValue" type="text" name="price" id="price" class="focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00">
            <div class="absolute inset-y-0 right-0 flex items-center">
              <div class="mr-4 text-gray-500">BTC</div>
            </div>
          </div>
        </div>

        <div class="flex space-x-4 mt-4">
            <div class="rounded-md shadow">
              <a href="#" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-2 md:text-lg md:px-10">
                Buy
              </a>
            </div>

            <div class="rounded-md shadow">
              <a href="#" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700 md:py-2 md:text-lg md:px-10">
                Sell
              </a>
            </div>
        </div>

      </div>  

    <div class="mt-12 mx-auto grid border divide-y rounded lg:col-span-3 lg:grid-cols-2 md:grid-cols-1 lg:divide-y-0 md:divide-x">
      <div class="flex flex-col justify-between p-10">
        <div>
          <p class="text-lg font-semibold text-gray-800 sm:text-base">
            Funds Raised
          </p>
          <p class="text-2xl font-bold text-deep-purple-accent-400 sm:text-xl">
            $84 000 000
          </p>
        </div>
        <div>
          <p class="text-lg font-semibold text-gray-800 sm:text-base">
            Products
          </p>
          <p class="text-2xl font-bold text-deep-purple-accent-400 sm:text-xl">
            52
          </p>
        </div>
        <div>
          <p class="text-lg font-semibold text-gray-800 sm:text-base">
            Downloads
          </p>
          <p class="text-2xl font-bold text-deep-purple-accent-400 sm:text-xl">
            186M
          </p>
        </div>
      </div>
      <div class="flex flex-col justify-between p-10">
        <div>
          <p class="text-lg font-semibold text-gray-800 sm:text-base">Users</p>
          <p class="text-2xl font-bold text-deep-purple-accent-400 sm:text-xl">
            86K
          </p>
        </div>
        <div>
          <p class="text-lg font-semibold text-gray-800 sm:text-base">
            Installations
          </p>
          <p class="text-2xl font-bold text-deep-purple-accent-400 sm:text-xl">
            917 000
          </p>
        </div>
        <div>
          <p class="text-lg font-semibold text-gray-800 sm:text-base">
            Subscribers
          </p>
          <p class="text-2xl font-bold text-deep-purple-accent-400 sm:text-xl">
            213K
          </p>
        </div>
      </div>
      </div>
          
    </div>
  </div>

  </div>
  <div>
  
  </div>
  <div class="mt-16 grid gap-8 row-gap-5 mb-8 md:row-gap-8 lg:grid-cols-4 sm:grid-cols-2">
    <div class="duration-300 transform bg-white border-l-4 border-deep-purple-accent-400 hover:-translate-y-2">
      <div class="h-full p-5 border border-l-0 rounded-r shadow-sm">
        <h6 class="mb-2 font-semibold leading-5">Coin Info</h6>
          <div class="text-sm text-gray-600">Total Supply</div>
          <div><%= @coin["market_data"]["total_supply"]%></div>

          <div class="text-sm text-gray-600 mt-2">Max Supply</div>
          <div><%= @coin["market_data"]["max_supply"]%></div>

          <div class="text-sm text-gray-600 mt-2">Market Cap Rank</div>
          <div>#<%= @coin["market_data"]["market_cap_rank"]%></div>

          <div class="text-sm text-gray-600 mt-2">Market Cap</div>
          <div><%= number_to_currency @coin["market_data"]["market_cap"]["usd"]%></div>

          <div class="text-sm text-gray-600 mt-2">Total Volume</div>
          <div><%= number_to_currency @coin["market_data"]["total_volume"]["usd"]%></div>
      </div>
    </div>
    <div class="duration-300 transform bg-white border-l-4 border-deep-purple-accent-400 hover:-translate-y-2">
      <div class="h-full p-5 border border-l-0 rounded-r shadow-sm">
        <h6 class="mb-2 font-semibold leading-5">All Time High/Low Info</h6>

        <div class="text-sm text-gray-600">All Time High</div>
          <div><%= number_to_currency @coin["market_data"]["ath"]["usd"]%></div>

          <div class="text-sm text-gray-600 mt-2">All Time High Date</div>
          <div><%= DateTime.parse(@coin["market_data"]["ath_date"]["usd"]).strftime("%d/%m/%Y")%></div>

          <div class="text-sm text-gray-600 mt-2">All Time High Change %</div>
          <div><%= @coin["market_data"]["ath_change_percentage"]["usd"]%> %</div>

          <div class="text-sm text-gray-600 mt-2">All Time Low</div>
          <div><%= number_to_currency @coin["market_data"]["atl"]["usd"]%></div>

          <div class="text-sm text-gray-600 mt-2">All Time Low Date</div>
          <div><%= DateTime.parse(@coin["market_data"]["atl_date"]["usd"]).strftime("%d/%m/%Y")%></div>

          <div class="text-sm text-gray-600 mt-2">All Time Low Change %</div>
          <div><%= @coin["market_data"]["atl_change_percentage"]["usd"]%> %</div>
      </div>
    </div>
    <div class="duration-300 transform bg-white border-l-4 border-deep-purple-accent-400 hover:-translate-y-2">
      <div class="h-full p-5 border border-l-0 rounded-r shadow-sm">
        <h6 class="mb-2 font-semibold leading-5">Historical Price Changes</h6>    
          <div class="text-sm text-gray-600">7-day change</div>
          <div><%= @coin["market_data"]["price_change_percentage_7d"]%>%</div>

          <div class="text-sm text-gray-600 mt-2">14-day change</div>
          <div><%= @coin["market_data"]["price_change_percentage_14d"]%>%</div>

          <div class="text-sm text-gray-600 mt-2">30-day change</div>
          <div><%= @coin["market_data"]["price_change_percentage_30d"]%>%</div>

          <div class="text-sm text-gray-600 mt-2">60-day change</div>
          <div><%= @coin["market_data"]["price_change_percentage_60d"]%>%</div>

          <div class="text-sm text-gray-600 mt-2">200-day change</div>
          <div><%= @coin["market_data"]["price_change_percentage_200d"]%>%</div>

          <div class="text-sm text-gray-600 mt-2">1-year change</div>
          <div><%= @coin["market_data"]["price_change_percentage_1y"]%>%</div>
      </div>
    </div>
    <div class="duration-300 transform bg-white border-l-4 border-deep-purple-accent-400 hover:-translate-y-2">
      <div class="h-full p-5 border border-l-0 rounded-r shadow-sm">
        <h6 class="mb-2 font-semibold leading-5">Sentiment</h6>
        <div class="flex">          
          <img src="/assets/bull-market.png" width="150" height="150" alt="Edit Entry" />
          <div class="mx-auto my-auto font-semibold text-xl"><%= @coin["sentiment_votes_up_percentage"]%>%</div>
        </div>

        <div class="flex">          
          <img src="/assets/bear-market.png" width="150" height="150" alt="Edit Entry" />
          <div class="mx-auto my-auto font-semibold text-xl"><%= @coin["sentiment_votes_down_percentage"]%>%</div>
        </div>
        
      </div>
    </div>
  </div>
    <div>Powered by <a href="www.coingecko.com" class="text-indigo-600 hover:text-indigo-500">
              CoinGecko
            </a></div>
</div>