<div class="w-8/12 text-2xl font-semibold text-center mx-auto my-8">Portfolio <%= @test %></div>

<div class="px-4 py-6 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8">
  <div class="grid row-gap-8 sm:grid-cols-3">
    <div class="text-center">
      <h6 class="text-5xl font-bold text-blue-600"><%= number_to_currency current_user.cash_balance %></h6>
      <p class="font-bold">Cash Balance</p>
    </div>
    <div class="text-center">
      <h6 class="text-5xl font-bold text-blue-600"><%= number_to_currency @total_value %></h6>
      <p class="font-bold">Total Crypto Value</p>
    </div>
    <div class="text-center">
      <h6 class="text-5xl font-bold text-blue-600"><%= number_to_currency @total_profit %> <span class="text-gray-500 text-2xl"><%= number_with_precision(@total_profit_percentage, precision: 2) %></span></h6>
      <p class="font-bold">Total Profit Loss</p>
    </div>
  </div>
</div>

<div class="flex flex-col w-8/12 mx-auto">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>              
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Coin
              </th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Price
              </th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                24h Change
              </th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                24h Volume
              </th>
               <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Holdings
              </th>
               <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                P/L
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
           <div id="coins-container">                
              <%= render @portfolios %>
           </div>
            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
